{
  "name": "@react-ssr/remote2",
  "version": "0.0.0",
  "scripts": {
    "start": "yarn run build && yarn run serve",
    "start:client": "webpack serve --mode=development --config ./config/webpack.client.js --host 0.0.0.0 --port 3002",
    "start:server": "webpack --watch --mode=development --config ./config/webpack.server.js",
    "serve": "concurrently \"yarn start:client\" \"yarn start:server\"",
    "build": "yarn build:client && yarn build:server",
    "build:client": "rimraf dist/client && webpack --mode production --config config/webpack.client.js",
    "build:server": "rimraf dist/server && webpack --mode production --config config/webpack.server.js"
  },
  "dependencies": {
    "concurrently": "^8.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "regenerator-runtime": "0.13.11",
    "webpack-dev-server": "^4.15.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.4",
    "@module-federation/node": "1.0.5",
    "@types/react": "18.0.38",
    "@types/react-dom": "18.0.11",
    "babel-loader": "8.2.5",
    "html-webpack-plugin": "5.5.0",
    "rimraf": "3.0.2",
    "webpack": "5.80.0",
    "webpack-cli": "4.9.2",
    "webpack-merge": "5.8.0"
  }
}
